{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "OcheScript",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#class-names"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#method-calls"
		},
		{
			"include": "#field-access"
		},
		{
			"include": "#constants"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#punctuation"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.ochescript",
					"match": "//.*$"
				},
				{
					"name": "comment.block.ochescript",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.ochescript",
					"match": "\\b(if|else|while|for|return|break|continue|switch|case|default|is|in|async|await)\\b"
				},
				{
					"name": "keyword.other.ochescript",
					"match": "\\b(var|const|fun|class|extends|this|super)\\b"
				},
				{
					"name": "keyword.other.print.ochescript",
					"match": "\\b(print|out)\\b"
				},
				{
					"name": "keyword.other.include.ochescript",
					"match": "\\b(include)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "support.type.ochescript",
					"match": "\\b(Num|Bool|List|Map|Date|Duration|String|void)\\b"
				}
			]
		},
		"class-names": {
			"patterns": [
				{
					"name": "entity.name.type.class.ochescript",
					"match": "\\b(class)\\s+([A-Z][a-zA-Z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "keyword.other.ochescript"
						},
						"2": {
							"name": "entity.name.type.class.ochescript"
						}
					}
				},
				{
					"name": "entity.name.type.class.ochescript",
					"match": "\\b([A-Z][a-zA-Z0-9_]*)(?=\\s*\\()",
					"comment": "Class constructor calls"
				},
				{
					"name": "entity.name.type.class.ochescript",
					"match": "(?<=extends\\s+)([A-Z][a-zA-Z0-9_]*)",
					"comment": "Class names in extends clause"
				}
			]
		},
		"method-calls": {
			"patterns": [
				{
					"name": "entity.name.function.ochescript",
					"match": "\\b([a-z_][a-zA-Z0-9_]*)(?=\\s*\\()",
					"comment": "Function and method calls"
				}
			]
		},
		"field-access": {
			"patterns": [
				{
					"name": "variable.other.property.ochescript",
					"match": "(?<=\\.)([a-zA-Z_][a-zA-Z0-9_]*)",
					"comment": "Field/property access after dot"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.language.boolean.ochescript",
					"match": "\\b(true|false)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.ochescript",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ochescript",
					"match": "\\\\."
				},
				{
					"name": "variable.other.interpolation.ochescript",
					"match": "\\$([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "variable.other.ochescript"
						}
					}
				},
				{
					"name": "meta.embedded.line.ochescript",
					"begin": "\\$\\{",
					"end": "\\}",
					"beginCaptures": {
						"0": {
							"name": "punctuation.section.embedded.begin.ochescript"
						}
					},
					"endCaptures": {
						"0": {
							"name": "punctuation.section.embedded.end.ochescript"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.hex.ochescript",
					"match": "\\b0[xX][0-9a-fA-F]+\\b"
				},
				{
					"name": "constant.numeric.decimal.ochescript",
					"match": "\\b[0-9]+\\.?[0-9]*\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.logical.ochescript",
					"match": "(&&|\\|\\||!)"
				},
				{
					"name": "keyword.operator.comparison.ochescript",
					"match": "(==|!=|<=|>=|<|>)"
				},
				{
					"name": "keyword.operator.arithmetic.ochescript",
					"match": "(\\+\\+|--|\\+|-|\\*|/|%)"
				},
				{
					"name": "keyword.operator.bitwise.ochescript",
					"match": "(~|&|\\||\\^|<<|>>)"
				},
				{
					"name": "keyword.operator.assignment.ochescript",
					"match": "="
				}
			]
		},
		"punctuation": {
			"patterns": [
				{
					"name": "punctuation.terminator.statement.ochescript",
					"match": ";"
				},
				{
					"name": "punctuation.separator.comma.ochescript",
					"match": ","
				},
				{
					"name": "punctuation.accessor.ochescript",
					"match": "\\."
				},
				{
					"name": "punctuation.separator.colon.ochescript",
					"match": ":"
				},
				{
					"name": "punctuation.section.block.begin.ochescript",
					"match": "\\{"
				},
				{
					"name": "punctuation.section.block.end.ochescript",
					"match": "\\}"
				},
				{
					"name": "punctuation.section.parens.begin.ochescript",
					"match": "\\("
				},
				{
					"name": "punctuation.section.parens.end.ochescript",
					"match": "\\)"
				},
				{
					"name": "punctuation.section.brackets.begin.ochescript",
					"match": "\\["
				},
				{
					"name": "punctuation.section.brackets.end.ochescript",
					"match": "\\]"
				}
			]
		}
	},
	"scopeName": "source.ochescript"
}